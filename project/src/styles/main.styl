themeColors = #9f79ee
contentColor = #e5e5e5

*
    margin: 0
    padding: 0
html, body
    width: 100%
    height: 100%
/* 模态框 */
.ma_modal_shade
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
    background: rgba(105,105,105,0.5)
    display: flex
    justify-content: center
    align-items: center
    .ma_modal_container
        border: 1px solid themeColors
        opacity: 1
        z-index: 9999
        .ma_modal_header
            width: 100%
            height: 30px
            background: themeColors
            .ma_modal_title
                height: 30px
                font-size: 15px
                line-height: 30px
                padding: 0 5px
                display: inline-block
                float: left
            .ma_modal_close
                width: 30px
                height: 30px
                font-size: 30px
                display: inline-block
                float: right
                cursor: pointer
        .ma_modal_content
            width: 100%
            background: contentColor

